<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>

    <div class="row">
        <div class="col-sm-1" style="background-color:white;"></div>
        <div class="col-sm-10">

    

                <a class="navbar-brand" href="@Url.Action("Index", "Main")">KTU United</a>

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Web App", "Index", "Main", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Development Team", "Index", "Team", new { area = "" }, null)</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
                <img src="~/Content/img/header.png" width="100%">
</div>
        <div class="col-sm-1" style="background-color:white;"></div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KentSoft</p>
        </footer>
    </div>
</body>
</html>
