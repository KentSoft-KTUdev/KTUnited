
@{
    ViewBag.Title = "RegisterGuard";
    Layout = "~/Views/Shared/_WebAppLayout.cshtml";
}

<h2>Register a Guard</h2>

<div>
    <form action="">

        <div class="form-group">
            <label for="usr">First Name:</label>
