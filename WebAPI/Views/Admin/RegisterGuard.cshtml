
@{
    ViewBag.Title = "RegisterGuard";
    Layout = "~/Views/Shared/_WebAppLayout.cshtml";
}

<h2>Register a Guard</h2>

<div>
    <form action="">

        <div class="form-group">
            <label for="usr">Personal code:</label>
            <input type="number" class="form-control" id="personalcode">
        </div>

        <div class="form-group">
            <label for="usr">First Name:</label>
            <input type="text" class="form-control" id="firstname">
        </div>
        <div class="form-group">
            <label for="pwd">Last Name:</label>
            <input type="text" class="form-control" id="lastname">
        </div>

        <label for="sel1">Select dormitory :</label>
        <div>
            @Html.DropDownList("ResidentController", (IEnumerable
                              <SelectListItem>)ViewBag.Dormitory, new { @class = "form-control" })
        </div>
        <br />

        <br />

        <button type="submit" class="btn btn-default">Submit</button> <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Admin")'">Back</button>
    </form>
</div>