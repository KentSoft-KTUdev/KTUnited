﻿@model DataContract.Objects.Guard

@{
    ViewBag.Title = "RegisterGuard";
    Layout = "~/Views/Shared/_WebAppLayout.cshtml";
}

<h2>Register a Guard</h2>

<div>
    @using (Html.BeginForm("CreateGuard", "Admin", FormMethod.Post, new { id = "submitForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PersonalCode, "Personal code:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PersonalCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonalCode, "Personal code is manditory field", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Name:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "Name is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Surname, "Surname:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "Surname is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.DropDownListFor(model => model.Dormitory, (IEnumerable <SelectListItem>)ViewBag.Dormitory, "Dormitory:", htmlAttributes: new { @class = "form-control col-md-2" })
            @*<div class="col-md-10">
                @Html.EditorFor(model => model.Dormitory, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dormitory, "Dormitory is manditory field", new { @class = "text-danger" })
            </div>*@
            @*reikia sufixint, kad veiktu dropdownlistui*@
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }

</div>
