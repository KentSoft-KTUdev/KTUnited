﻿@model DataContract.Objects.Resident
@{
    ViewBag.Title = "ResidentForm";
    Layout = "~/Views/Shared/_WebAppLayout.cshtml";
}
<style>
    article, aside, figure, footer, header, hgroup,
    menu, nav, section {
        display: block;
    }


    #labels {
        margin-bottom: 20px;
    }

    #buttons {
        margin-left: 20px;
    }
</style>
<h2>Registration form of a resident</h2>

<div>
    @using (Html.BeginForm("RegisterResident", "Admin", FormMethod.Post, new { id = "submitForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Name:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "Name is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Surname, "Surname:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "Surname is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PersonalCode, "Personal code:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.EditorFor(model => model.PersonalCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonalCode, "Personal code is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("DormitoryLabel", "Dormitory:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.DropDownList("DormitoryId", null, new { @class = "form-control" })
                @Html.ValidationMessage("DormitoryId", "Dormitory is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("RoomLabel", "Room:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.DropDownList("RoomId", null, new { @class = "form-control" })
                @Html.ValidationMessage("RoomId", "Room number is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Username, "System login:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name+Surname" } })
                @Html.ValidationMessageFor(model => model.Username, "Login is manditory field", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, "System password:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="labels">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.DefaultPassword } })
                @Html.ValidationMessageFor(model => model.Password, "Surname is manditory field", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <button type="button" id="buttons" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Admin")'">Go back</button>
            </div>
        </div>
    }

</div>